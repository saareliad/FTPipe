{
    "logdir": "logs/cv/",
    "data_dir": "/home_local/saareliad/data",
    "out_dir":"results/cv/",
    "auto_file_name": true,
    "out_filename": "cv",
    "statistics": "cv",
    "distributed_backend": "mpi",
    "task": "cv_sep",
    "use_pre_loaded_input": false,
    "model": "wrn_28x10_c100_dr03_p4",
    "dataset": "cifar100",
    "trainer": {
        "type": "cv",
        "args": {
            "always_calc_grad_norm": false 
        }
    },

    "optimizer": {
        "type": "sgd1",
        "args": {
            "lr": 0.1,
            "weight_decay": 0.0005,
            "momentum": 0.9,
            "nesterov": false
        }
    },
    "bs_train": 128,
    "bs_test": 200,
    "num_data_workers": 10,
    "lr_scheduler": {
        "type": "get_multi_step_lr_schedule_with_warmup",
        "args": {
            "num_warmup_steps": 5,
            "milestones": [60, 120, 160],
            "gamma": 0.2,
            "last_epoch": -1
        }
    },
    "epochs": 205,
    "steps": -1,
    "seed_from_cmd": true,
    "num_chunks": 1,
    "verbose_comm": false,
    "flush_rate": -1,
    "work_scheduler": "1F1B",
    "cudnn_benchmark": true,
    "max_buffers": 1,
    "step_every": 1,
    "keep_buffers_alive": true,
    "train_batches_limit":-1,
    "log_frequency": 100
}
