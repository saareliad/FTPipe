{
    "logdir": "logs/",
    "distributed_backend": "nccl",
    "out_dir":"results/",
    "out_filename": "ddp_32perworker",
    "auto_file_name": true,
    "statistics": "cv",
    "model": "wrn_28x10_c100_dr03_p4",
    "dataset": "cifar100",
    "trainer": {
        "type": "cv",
        "args": {
            "always_calc_grad_norm": false
        }
    },
    "bs_train": 32,
    "ddp": true,
    "bs_test": 200,
    "num_data_workers": 10,
    "optimizer": {
        "type": "sgd1",
        "args": {
            "lr": 0.025,
            "weight_decay": 0.0005,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "lr_scheduler": {
        "type": "get_multi_step_lr_schedule_with_warmup",
        "args": {
            "num_warmup_steps": 5,
            "milestones": [60, 120, 160],
            "gamma": 0.2,
            "last_epoch": -1
        }
    },
    "epochs": 220,
    "steps": -1,
    "seed": 42,
    "verbose_comm": false,
    "seed_from_cmd": true,
    "cudnn_benchmark": true
}
