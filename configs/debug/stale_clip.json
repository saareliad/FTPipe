{
    "logdir": "logs/",
    "out_dir":"results/",
    "out_filename": "stale_clip",
    "distributed_backend": "mpi",
    "task": "cv",
    "statistics": "cv_grad_norm",
    "model": "wrn_16x4_p4",
    "dataset": "cifar10",
    "trainer": {
        "type": "cv",
        "args": {
            "max_grad_norm": 0.25,
            "always_calc_grad_norm": false
        }
    },
    "bs_train": 128,
    "bs_test": 200,
    "num_data_workers": 10,
    "optimizer": {
        "type": "sgd1",
        "args": {
            "lr": 0.1,
            "weight_decay": 0.0005,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "lr_scheduler": {
        "type": "get_multi_step_lr_schedule_with_warmup",
        "args": {
            "num_warmup_steps": 5,
            "milestones": [60, 120, 160],
            "gamma": 0.2,
            "last_epoch": -1
        }
    },
    "epochs": 200,
    "steps": -1,
    "seed": 42,
    "num_chunks": 1,
    "verbose_comm": false,
    "flush_rate": -1
}
